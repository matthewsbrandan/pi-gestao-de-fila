<div class="modal modal-signin bg-secondary py-5" tabindex="-1" role="dialog" id="modalAddDevice">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-5 shadow">
      <div class="modal-header p-5 pb-4 border-bottom-0">
        <h2 class="fw-bold mb-0">Adicionar Dispositivo</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body p-5 pt-2">
        <form
          id="form-add-device"
          action="<%- route.device.create() -%>"
          method="POST"
        >
          <p class="lead">
            Adicione um novo dispositivo para acompanhar seus pedidos
          </p>
          <div class="form-floating mb-3">
            <input
              type="text"
              name="name"
              id="device-name"
              class="form-control rounded-4"
              placeholder="Digite seu nome..."
              required
            >
            <label for="device-name">Nome</label>
          </div>
          
          <button class="w-100 mb-2 btn btn-lg rounded-4 btn-primary" type="submit">Cadastrar</button>
        </form>
      </div>
    </div>
  </div>
</div>