<div 
  v-if="!!cartOpen"
  style="
    border-radius: 1rem 0 0 0;
    background-color: white;
    border: 1px solid #0022;
    position: fixed;
    z-index: 999999;
    bottom: -4px;
    right: -4px;
    width: 20rem;
    min-height: 5rem;
    box-shadow: 0 0 60px #0023;
  "
>
  <div class="modal-header border-bottom-0 pb-2 pe-2">
    <h6 class="modal-title">Carrinho</h6>
    <button type="button" class="btn-close btn-sm" aria-label="Close" @click="close()"></button>
  </div>
  <ul class="list-group" style="
    max-height: calc(90vh - 3rem);
    overflow-y: auto;
  ">
    <li v-for="(item,index) in cart" class="list-group-item border-0 hover-gray-100 pe-2">
      <label class="d-flex align-items-center justify-content-between">
        <div class="d-flex flex-column">
          <small class="text-muted"><b>{{item.id}} -</b> {{item.name}}</small>
          <small class="text-muted" style="font-size: 10px;opacity: .7;">R$ {{ item.price * item.qtd }}</small>
        </div>
        <div class="d-flex align-items-center justify-content-between">
          <input
            type="number"
            class="form-control"
            v-model="item.qtd"
            style="max-width: 80px;"
          />
          <button
            class="btn btn-sm btn-danger m-0 ms-1 p-0"
            style="border-radius: 2rem;width: 1.3rem;height: 2.5rem;display: flex;align-items: center;justify-content: center;"
            v-on:click ="deleteItem(index)"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="14"
              height="20"
              viewBox="0 0 24 24"
              style="fill: #fff;"
            >
              <path d="M5 20a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V8h2V6h-4V4a2 2 0 0 0-2-2H9a2 2 0 0 0-2 2v2H3v2h2zM9 4h6v2H9zM8 8h9v12H7V8z"></path>
              <path d="M9  10h2v8H9zm4 0h2v8h-2z"></path>
            </svg>
          </button>
        </div>
      </label>
    </li>
  </ul>
  <div class="modal-footer border-top-0 pb-2 pe-2">    
    <button
      type="button"
      class="btn btn-sm btn-dark"
      style="border-radius: .5rem; width: 100%;"
      v-on:click="submitCart"
    >Finalizar (<b>R$ {{ cart.reduce((acc, curr) => acc + (curr.price * curr.qtd), 0) }}</b>)</button>
  </div>
</div>