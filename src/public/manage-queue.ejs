    function defaultQRCode(el, id){
      const makeCode = (id) => {
        el.innerHTML = `
          <small class="text-muted">
            Não foi possível gerar o qrcode.<br/>
            Insira o código acima na aplicação para acompanhar seu pedido
          </small>
        `
      }
      const clear = () => el.innerHTML = ''

      if(id) makeCode(id)
      else clear()

      return { clear, makeCode }
    }
    const handleUrl = (path) => `${window.location.protocol}//${window.location.host}/${path}`
  </script>
